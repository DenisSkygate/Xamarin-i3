<?xml version="1.0" encoding="UTF-8"?>
<ContentPage  
    xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="GeeCoeur.Views.Account.AccountSkillsPage">
	<ContentPage.Content>
          <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="0.2*"/>
            </Grid.RowDefinitions>
            <StackLayout Grid.Row="0" Margin="30">
                <Entry x:Name="SkillEntry" Placeholder="Skills"/>
            
                <Button x:Name="AddButton" Clicked="AddSkill_Clicked" Text="Add skill"/>
                <StackLayout Orientation="Horizontal" x:Name="SkillsLayout" >

                </StackLayout>

            </StackLayout>
            <Button Grid.Row="1" HorizontalOptions="End" Text="Next"   x:Name="NextButton" Clicked="Next_Clicked"/>
            <Button Grid.Row="1" HorizontalOptions="Start" Text="Back" x:Name="BackButton" Clicked="Back_Clicked"/>
        </Grid>
	</ContentPage.Content>
</ContentPage>
