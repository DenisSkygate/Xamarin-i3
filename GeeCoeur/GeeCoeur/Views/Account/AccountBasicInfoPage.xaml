<?xml version="1.0" encoding="UTF-8"?>
<ContentPage 
    xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="GeeCoeur.Views.Account.AccountBasicInfoPage">
	<ContentPage.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="0.2*"/>
            </Grid.RowDefinitions>
            <StackLayout Grid.Row="0" Margin="30">
                <Entry x:Name="FirstName" Placeholder="First name"/>
                <Entry x:Name="Lastname"  Placeholder="Last name"/>
                <Entry x:Name="Username"  Placeholder="Username"/>
                <DatePicker x:Name="Birthday" />

            </StackLayout>
            <Button Grid.Row="1" HorizontalOptions="End" Text="Next" x:Name="NextButton" Clicked="Next_Clicked"/>
        </Grid>                                                 


        
	</ContentPage.Content>
</ContentPage>
