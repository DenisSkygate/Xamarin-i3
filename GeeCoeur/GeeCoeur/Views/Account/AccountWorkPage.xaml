<?xml version="1.0" encoding="UTF-8"?>
<ContentPage  
    xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="GeeCoeur.Views.Account.AccountWorkPage">
	<ContentPage.Content>
          <Grid>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="0.2*"/>
            </Grid.RowDefinitions>
             <StackLayout Grid.Row="0" Margin="30">
                <Entry x:Name="Title" Placeholder="Title"/>
                <Entry x:Name="Description"  Placeholder="Description"/>

               

            </StackLayout>
            <Button Grid.Row="1" HorizontalOptions="End" Text="End"    x:Name="NextButton" Clicked="Next_Clicked"/>
            <Button Grid.Row="1" HorizontalOptions="Start" Text="Back" x:Name="BackButton" Clicked="Back_Clicked"/>
        </Grid>
	</ContentPage.Content>
</ContentPage>
